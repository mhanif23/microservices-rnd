{
  "compilerOptions": {
    "target": "ES2023",
    "module": "commonjs",
    "lib": ["ES2023"],
    "moduleResolution": "node",
    "types": ["node"],

    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,

    "strict": true,
    "skipLibCheck": true,

    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": "./"
  },
  "include": ["src/**/*"]
}
